import jakarta.persistence.Entity;
import jakarta.persistence.Id;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Column;
import jakarta.persistence.Table;

/**
 * Represents a student record and maps to the 'student' database table.
 */
@Entity // 1. Marks this class as a JPA entity.
@Table(name = "students") // Optional: Explicitly names the database table.
public class Student {

    // Primary Key (ID) Mapping
    @Id // 2. Marks this field as the primary key of the entity/table.
    @GeneratedValue(strategy = GenerationType.IDENTITY) // 3. Specifies the ID will be generated by the database (e.g., auto-increment).
    private Long id;

    // Field Mapping
    @Column(name = "student_name", nullable = false) // Optional: Custom column name and constraint (cannot be null).
    private String name;

    // Note: Corrected the field name from 'emial' to 'email'.
    @Column(unique = true) // Optional: Ensures that every email address must be unique in the database.
    private String email;
    
    private String course; // Uses default mapping: column name will be 'course'.

    // --- Constructors ---

    public Student() {
        // Default constructor required by JPA
    }

    public Student(String name, String email, String course) {
        this.name = name;
        this.email = email;
        this.course = course;
    }

    // --- Getters and Setters (Omitted for brevity, but necessary for a complete class) ---
    // public Long getId() { ... }
    // public void setId(Long id) { ... }
    // ... and so on for name, email, and course
}
